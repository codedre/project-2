<% @moods.each do |mood| %>
  <div class="col-sm-3">
    <h2><%= mood.name %></h2> <%= link_to new_mood_food_path(mood), class: "btn btn-success", title: "add food" do %>Add Food &nbsp;<i class="glyphicon glyphicon-plus"></i><% end %> <%= link_to edit_mood_path(mood), class: "btn btn-primary", title: "Edit" do %>Edit &nbsp;<i class="glyphicon glyphicon-edit"></i><% end %> <%= link_to mood_path(mood), class: "btn btn-danger", method: :delete, title: "Delete" do %><i class="glyphicon glyphicon-minus"></i><% end %>
    <ul class="list-group">
      <% mood.foods.each do |food| %>
        <li class="list-group-item"><%= food.name %> <%= link_to mood_food_path(mood, food), class: "btn-xs btn-danger pull-right", method: :delete, title: "Delete" do %><i class="glyphicon glyphicon-minus"></i><% end %></li>
      <% end %>
    </ul>
  </div>
<% end %>
